<?xml version="1.0" encoding="utf-8"?>
<com.pkvn.skew.SkewRowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_contactRow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_row_selector"
    android:orientation="horizontal" >

    <com.pkvn.skew.CustomImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/user" />

    <com.pkvn.skew.CustomTextView
        android:id="@+id/id_contactName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp" />

</com.pkvn.skew.SkewRowLayout>